# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,https://your-app.vercel.app

# Supabase Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_JWKS_ISSUER=your_supabase_url/auth/v1
SUPABASE_JWKS_URL=your_supabase_url/auth/v1/keys
SUPABASE_JWT_AUD=authenticated

# PDF Ingestion Configuration
ALLOWED_PUBLIC_BASE=https://your-bucket.supabase.co/storage/v1/object/public/
PDF_MAX_BYTES=20000000
CHUNK_LEN=30000
FETCH_TIMEOUT_SECONDS=20

# Feature Flags
NARRATIVE_JOBS_ENABLED=false

# Security
JWT_SECRET=your_jwt_secret

# Database
DATABASE_URL=postgresql://user:password@localhost/dbname

# ── LLM Configuration ─────────────────────────────────────────────────
# Chat uses Gemini by default. Set these to override:
# LLM_PROVIDER=google          # Options: google, openai, anthropic, openrouter
# LLM_MODEL=gemini-2.0-flash   # Model name for chosen provider

# API Keys (set the one for your chosen provider)
GOOGLE_API_KEY=your_google_api_key
# OPENAI_API_KEY=your_openai_key
# ANTHROPIC_API_KEY=your_anthropic_key

# Worker embeddings (always uses OpenAI for consistency)
OPENAI_API_KEY=your_openai_key
